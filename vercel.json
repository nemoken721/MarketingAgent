{
  "crons": [
    {
      "path": "/api/cron/refresh-tokens",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/process-scheduled-posts",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/crawl-knowledge",
      "schedule": "0 15 1 * *"
    }
  ],
  "functions": {
    "app/api/export/image/route.ts": {
      "memory": 1024,
      "maxDuration": 60
    },
    "app/api/export/video/route.ts": {
      "memory": 3008,
      "maxDuration": 300
    }
  }
}
